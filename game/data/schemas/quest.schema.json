{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Quest",
    "description": "Quest definition",
    "type": "object",
    "required": [
        "id",
        "title",
        "stages"
    ],
    "properties": {
        "id": {
            "type": "string"
        },
        "title": {
            "type": "string"
        },
        "description": {
            "type": "string"
        },
        "type": {
            "type": "string",
            "enum": [
                "main",
                "side"
            ]
        },
        "stages": {
            "type": "array",
            "items": {
                "type": "object",
                "required": [
                    "id",
                    "description"
                ],
                "properties": {
                    "id": {
                        "type": "integer"
                    },
                    "description": {
                        "type": "string"
                    },
                    "objectives": {
                        "type": "array",
                        "items": {
                            "type": "object",
                            "required": [
                                "type",
                                "target",
                                "count"
                            ],
                            "properties": {
                                "type": {
                                    "type": "string",
                                    "enum": [
                                        "kill",
                                        "collect",
                                        "talk",
                                        "visit"
                                    ]
                                },
                                "target": {
                                    "type": "string"
                                },
                                "count": {
                                    "type": "integer"
                                }
                            }
                        }
                    }
                }
            }
        },
        "rewards": {
            "type": "object",
            "properties": {
                "exp": {
                    "type": "integer"
                },
                "gold": {
                    "type": "integer"
                },
                "items": {
                    "type": "object"
                }
            }
        }
    }
}