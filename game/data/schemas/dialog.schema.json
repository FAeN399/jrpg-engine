{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Dialog",
    "description": "Conversation tree",
    "type": "object",
    "required": [
        "id",
        "nodes"
    ],
    "properties": {
        "id": {
            "type": "string"
        },
        "nodes": {
            "type": "array",
            "items": {
                "type": "object",
                "required": [
                    "id",
                    "text"
                ],
                "properties": {
                    "id": {
                        "type": "string"
                    },
                    "speaker": {
                        "type": "string"
                    },
                    "text": {
                        "type": "string"
                    },
                    "choices": {
                        "type": "array",
                        "items": {
                            "type": "object",
                            "required": [
                                "text",
                                "next_node"
                            ],
                            "properties": {
                                "text": {
                                    "type": "string"
                                },
                                "next_node": {
                                    "type": "string"
                                },
                                "condition": {
                                    "type": "string"
                                }
                            }
                        }
                    },
                    "next_node": {
                        "type": "string"
                    },
                    "events": {
                        "type": "array",
                        "items": {
                            "type": "object",
                            "required": [
                                "type"
                            ],
                            "properties": {
                                "type": {
                                    "type": "string"
                                },
                                "params": {
                                    "type": "object"
                                }
                            }
                        }
                    }
                }
            }
        }
    }
}